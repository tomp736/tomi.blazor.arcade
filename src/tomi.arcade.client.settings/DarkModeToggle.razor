@inject tomi.arcade.client.settings.ClientSettingsService ClientSettingsService

<div class="form-check form-switch">
    <input class="form-check-input" type="checkbox" id="darkModeCheck" @bind="DarkMode" />
    <label class="form-check-label" for="darkModeCheck">Dark Mode</label>
</div>

@code
{
    private bool _darkMode = true;
    private bool DarkMode
    {
        get => _darkMode;
        set
        {
            _darkMode = value;
            ClientSettingsService.DarkMode = value;
        }
    }
}